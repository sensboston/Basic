3040 PRINT "  Length: "; LEN(S$)
3050 PRINT "  Left 5: "; LEFT$(S$, 5)
3060 PRINT "  Right 6: "; RIGHT$(S$, 6)
3070 PRINT "  Mid 8,5: "; MID$(S$, 8, 5)
3080 PRINT "  Upper: "; UCASE$(S$)
3090 PRINT
3100 RETURN

